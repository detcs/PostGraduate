<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
   
<LinearLayout
       	android:id="@+id/direction_choose"
       	android:orientation="horizontal"
       	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
       >
       <Button
           	android:id="@+id/master"
            android:text="@string/master"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
           />
       <Button
           	android:id="@+id/unmaster"
            android:text="@string/unmaster"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
           />
       </LinearLayout> 
       <LinearLayout
           android:id="@+id/remark_linear"
           android:layout_above="@id/direction_choose"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content" 
	    	android:orientation="vertical">
       <TextView
            android:text="@string/remark"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	
           />
        <TextView
            android:id="@+id/remark_content"
            android:text="remark_context"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	
           />
       
       </LinearLayout>
        <ImageView
            android:id="@+id/review_img"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:layout_above="@id/remark_linear"
        />
</RelativeLayout>
